{
	"name": "Reminderz",
	"description": "Reminders extension",
	"version": "1.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "index.html",
		"default_title": "Reminderz"
	},
	"permissions": ["alarms", "notifications", "offscreen"],
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"16": "logo.png",
		"48": "logo.png",
		"128": "logo.png"
	}
}
